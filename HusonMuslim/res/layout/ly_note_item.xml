<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

	<!--  ListRow Left sied Thumbnail image -->
	
    
	<!-- Title Of Song-->
	<!-- Artist Name -->

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="asdsd"
        android:src="@drawable/ic_top_favorite" />

    <RelativeLayout
        android:id="@+id/nafigation_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_selector2" >

        <RelativeLayout
            android:id="@+id/nafigation_container1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/note_color_ind"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:minHeight="30dp" />

            <TextView
                android:id="@+id/note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/note_color_ind"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

<View
    android:id="@+id/hr2"
    android:layout_width="fill_parent"
    android:layout_height="3dp"
    android:layout_below="@+id/nafigation_container1"
    android:background="@android:color/black"
    android:paddingTop="2dp" />

        <RelativeLayout
            android:id="@+id/nafigation_container2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hr2"
            android:layout_centerVertical="false" >

            <TextView
                android:id="@+id/semi_chapter_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/Relativecontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nafigation_container2"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/ImageView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="asdsd"
            android:src="@drawable/ic_quote" />

    <TextView
        android:id="@+id/webkit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ImageView03"
        android:gravity="right" />

    </RelativeLayout>

      <RelativeLayout
          android:id="@+id/note_container"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/Relativecontent"
          android:background="@color/list_background_pressed2" >

            <TextView
                android:id="@+id/note_body"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:paddingRight="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </RelativeLayout>

      

    </RelativeLayout>

  

    <TableLayout
        android:id="@+id/tablemenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/nafigation_container"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:stretchColumns="0,1,2" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:longClickable="false" >

            <RelativeLayout
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_action_btn" >

                <ImageView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_action_share" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_action_btn" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_action_delete" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_action_btn" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_action_overflow" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>